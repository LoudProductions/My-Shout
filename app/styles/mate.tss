	layout: "composite",
	height: Ti.UI.SIZE,
}
".mateName" : {
	autocorrect: false,
	top: 20,
	textAlign: Titanium.UI.TEXT_ALIGNMENT_CENTER,
}
".mateIcon" : {
	top: 20,
	width: 170,
	height: 50,
	textAlign: Titanium.UI.TEXT_ALIGNMENT_LEFT,
