	color: Alloy.CFG.colors.brandHintColor,
}
".mateNameIcon" : {
	text: Alloy.Globals.FAIcons.user
}
".matePoisonIcon" : {
	text: Alloy.Globals.FAIcons.flask
}
".matePriceIcon" : {
	text: Alloy.Globals.FAIcons.money
}
".autoNext" : {}
