	suppressReturn: false
}
".matePoison" : {
	top: 20,
	textAlign: Titanium.UI.TEXT_ALIGNMENT_CENTER,
}
".matePrice" : {
	top: 20,
	textAlign: Titanium.UI.TEXT_ALIGNMENT_CENTER,
